<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <ImageView
                android:layout_margin="7dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_arrow_back"
                android:id="@+id/toolbar_btn_back"/>
            <TextView
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:id="@+id/toolbar_username"
                android:text="UserID"
                android:fontFamily="@font/nanum_amsterdam"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="@color/colorNavIcon"
                android:layout_toRightOf="@+id/toolbar_btn_back"
                android:gravity="center_vertical"/>

            <Button
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/trash"
                android:id="@+id/toolbar_delete"
                android:layout_margin="7dp"/>

        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:id="@+id/detailviewitem_imageview_content"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_marginLeft="8dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_favorite_border"
            android:id="@+id/detailviewitem_favorite_imageview"/>
        <ImageView
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/ic_chat_black"
            android:id="@+id/detailviewitem_comment_imageview"/>
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />


        <Button
            android:id="@+id/toolbar_report"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:background="@drawable/siren" />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="like 0"
        android:layout_marginLeft="8dp"
        android:id="@+id/detailviewitem_favoritecounter_textview"
        android:fontFamily="@font/nanum_amsterdam"
        android:textStyle="bold"
        android:textSize="20sp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Explain content"
        android:id="@+id/detailviewitem_explain_textview"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:fontFamily="@font/nanum_amsterdam"
        android:textStyle="bold"
        android:textSize="30sp"/>

</LinearLayout>